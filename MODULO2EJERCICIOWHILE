

//ejercicio 1
let num= Number(prompt("dame un numero"));
let indice=0;
while(indice <= num){
    if(indice%5==0){
        console.log([indice])
    }
    indice++
    
}
    //ejercicio 2
let num1= Number(prompt("dame un numero 1-50"));
let num2= Number(prompt("dame un numero  1-50"));
let i=1;
while(i<50){
    if(i==num1 || i==num2){
        console.log("loteria")
    }
    console.log([i])

    i++
}
//ejercicio 3
let arreglo= []
let userinput;
while(!(userinput==0)){
userinput=prompt("ingresa un numero, al introducir 0 terminará tu arreglo")
arreglo.push(userinput);

}
console.log("introduciste  estos valores"+arreglo)

//ejercicio 4
let arreglo2= []
let i2;
while(!(i2=="")){
i2=prompt("ingresa letras o palabras, al no introducir nada terminará tu arreglo")
arreglo2.push(i2);

}
console.log(arreglo2);

